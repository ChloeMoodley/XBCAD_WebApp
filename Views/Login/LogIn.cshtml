@model XBCAD_WebApp.Models.LoginViewModel

@{
    ViewData["Title"] = "LogIn";
}

<h1>EMPLOYEE LOGIN</h1>

@*<body background="~/lib/Images/MTN_logo.png">*@

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>

        Body {
            font-family: Calibri, Helvetica, sans-serif;
            font-size: 20;
            background-color: white;
        }

        button {
            background-color: yellow;
            width: 100%;
            color: black;
            padding: 15px;
            margin: 10px 0px;
            border: none;
            cursor: pointer;
        }

        form {
            box-shadow: 00 10px 10px yellow, 00 25px 25px black;
            border: 3px solid yellow;
            background-color: dodgerblue;
            border-radius: 40px 40px 40px 40px;
        }

        input[type=text], input[type=password] {
            width: 100%;
            margin: 8px 0;
            padding: 12px 20px;
            display: inline-block;
            border: 15px 50px 30px 5px solid yellow;
            box-sizing: border-box;
        }

        button:hover {
            opacity: 0.7;
        }

        .cancelbtn {
            width: auto;
            padding: 10px 18px;
            margin: 10px 5px;
        }


        .container {
            padding: 25px;
            width: 200px background-color: lightblue;
            border-radius: 30px 30px 30px 30px
        }
    </style>
</head>
<body>
    <center> <h1>  </h1> </center>
    <form>
        <div class="container">
            <label>Username : </label>
            <input type="text" placeholder="Enter Username" name="username" required>
            <label>Password : </label>
            <input type="password" placeholder="Enter Password" name="password" required>
            <button type="submit">Login</button>
            <input type="checkbox" checked="checked"> Remember me
            <button type="button" class="cancelbtn"> Cancel</button>
            Forgot <a href="#"> password? </a>
        </div>
    </form>
</body>
</html>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
